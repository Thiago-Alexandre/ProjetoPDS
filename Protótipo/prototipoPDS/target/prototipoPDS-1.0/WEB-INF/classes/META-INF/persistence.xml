<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="inventario" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>model.ItemInventario</class>
    <class>model.TipoMovimentacao</class>
    <class>model.Baixa</class>
    <class>model.Responsavel</class>
    <class>model.Setor</class>
    <class>model.TipoUsuario</class>
    <class>model.Filial</class>
    <class>model.Usuario</class>
    <class>model.Aquisicao</class>
    <class>model.Especificacao</class>
    <class>model.Movimentacao</class>
    <class>model.Marca</class>
    <class>model.EstadoFisico</class>
    <class>model.PreInventario</class>
    <class>model.Material</class>
    <class>model.ItemPatrimonio</class>
    <class>model.FormaAquisicao</class>
    <class>model.FormaBaixa</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mariadb://localhost:3306/inventario"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="thi123"/>
      <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
      <property name="hibernate.hbm2ddl.auto" value="none"/>
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect"/>
      <property name="hibernate.c3p0.min_size" value="5"/>
      <property name="hibernate.c3p0.max_size" value="20"/>
      <property name="hibernate.c3p0.timeout" value="300"/>
      <property name="hibernate.c3p0.max_statements" value="50"/>
    </properties>
  </persistence-unit>
</persistence>
